{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-md-5 mx-auto">
        <h4 class="text-center my-4">Connexion</h4>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey | trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('security_login') }}" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" name="_username" placeholder="Adresse email..." required value="{{ last_username }}">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="_password" placeholder="Mot de passe..." required>
            </div>
            <div class="w-100 text-right form-group">
                <input type="submit" class="btn btn-primary" value="Connexion"/>
            </div>
        </form>
    </div>
{% endblock %}